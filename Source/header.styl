


header
	min-height 50px
	color white
	background-color #1a303d
	.row
		min-height 50px
	nav.nav
		display none
		@media screen and (min-width: 1001px)
			display flex!important
		@media screen and (max-width: 1000px)
			flex-direction: column
			width 100%
	a
		margin-bottom 0!important
	.nav_item
		@media screen and (max-width: 1000px)
			padding 10px
			margin-top 5px
			margin-bottom 5px!important

	nav.nav_burgerAlways
		display none
		flex-direction: column
		width 100%
		.nav_item
			padding 10px
			margin-top 5px
			margin-bottom 5px!important

.burger
	display none
	height 30px
	width 35px
	cursor pointer
	@media screen and (max-width: 1000px)
		display: flex!important
	&_line
		width 35px
		height 2px
		background #fff
	&_close
		.burger_line:nth-child(1)
			transform: rotate(55deg)
			transform-origin: 0 100%
			width 40px
		.burger_line:nth-child(2)
			display none
		.burger_line:nth-child(3)
			transform: rotate(-55deg)
			transform-origin: 0 100%
			width 40px



.burger_always
	display: flex!important