.main_screen
	height 500px
	background-color:rgb(238, 238, 238)
	@media screen and (min-width: 600px)
		height 600px
	@media screen and (min-width: 900px)
		height 700px
	.h1
		color:rgb(26, 48, 61)
		font-weight: 700
		font-size 2rem
		@media screen and (max-width: 666px)
			font-size 1.8rem
		@media screen and (max-width: 444px)
			font-size 1.5rem
		@media screen and (max-width: 300px)
			font-size 1.2rem
	.h4
		color:rgb(26, 48, 61)
		font-weight: 700
		font-size: 1.4rem
		@media screen and (max-width: 666px)
			font-size: 1.3rem
		@media screen and (max-width: 444px)
			font-size: 1.2rem
		@media screen and (max-width: 300px)
			font-size: 1rem
	.h6
		font-weight: 700
	.btn-lg
		@media screen and (max-width: 444px)
			padding: .375rem .75rem
			font-size: 1rem
			line-height: 1.5
			border-radius: 0.25rem